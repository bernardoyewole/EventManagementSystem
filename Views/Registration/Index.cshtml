@model IEnumerable<EMSENTITIES.Registration>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <style>
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
    }

    .container {
    width: 80%;
    margin: 20px auto;
    padding-top: 20px;
    }

    table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    background-color: #fff;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    th, td {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
    }

    th {
    background-color: #f8f8f8;
    font-weight: bold;
    }

    tr:hover {
    background-color: #f2f2f2;
    }

    a {
    color: #007bff;
    text-decoration: none;
    margin-right: 10px;
    }

    p {
    margin-top: 20px;
    }

    .btn {
    background-color: #007bff;
    color: #fff;
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }

    .btn:hover {
    background-color: #0056b3;
    }
    </style>
</head>
<body>
    <div class="container">
        <p>
            <a href="@Url.Action("CreateRegistration", "Registration")" class="btn">Register</a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ParticipantName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfTickets)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistrationDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParticipantName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfTickets)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditRegistration", new { registrationId = item.RegistrationId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.RegistrationId }) |
                        @Html.ActionLink("Delete", "DeleteRegistration", new { registrationId = item.RegistrationId }, new { onclick = "return confirm('Are you sure you want to delete this registration?');" })
                    </td>
                </tr>
            }

        </table>
        <center style="margin-top: 20px">
            <div>
                @Html.ActionLink("Back to Events", "Index", "Event")
            </div>
        </center>
    </div>
</body>
</html>
